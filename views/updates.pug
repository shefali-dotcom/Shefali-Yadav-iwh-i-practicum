doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= title
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="/css/style.css")

  body
    .container
      header.header
        h1 Add New Pet
        a.btn.btn-ghost(href="/") Back to List

      main.main-content
        if error
          .alert.alert-error= error

        form.form(method="POST" action="/update-cobj" novalidate)
          .form-group
            label(for="name") Pet Name
            input#name(
              type="text"
              name="name"
              required
              value=(old && old.name ? old.name : '')
              placeholder="e.g. Max"
            )

          .form-group
            label(for="breed") Breed
            input#breed(
              type="text"
              name="breed"
              required
              value=(old && old.breed ? old.breed : '')
              placeholder="e.g. Golden Retriever"
            )

          .form-group
            label(for="color") Color
            input#color(
              type="text"
              name="color"
              required
              value=(old && old.color ? old.color : '')
              placeholder="e.g. Golden"
            )

          .form-actions
            button.btn.btn-primary(type="submit") Add Pet
            a.btn.btn-ghost(href="/") Cancel